<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.HomeActivity">

    <ImageView
        android:id="@+id/imgDrink"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homedrinks" />

    <Button
        android:id="@+id/homeSnackButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Snacks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSnack" />

    <Button
        android:id="@+id/homeFoodButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgFood" />

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeDrinkButton"
        app:srcCompat="@drawable/homefood" />

    <ImageView
        android:id="@+id/imgSnack"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/homesnacks" />

    <ImageView
        android:id="@+id/imgTopUp"
        android:layout_width="206dp"
        android:layout_height="206dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeSnackButton"
        app:srcCompat="@drawable/hometopup" />

    <Button
        android:id="@+id/homeDrinkButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Drinks"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDrink"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/homeTopUpButton"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TOP UP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTopUp" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="NEAREST RESTAURANT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>